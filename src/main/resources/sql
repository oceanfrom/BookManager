create table Person (
                        id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
                        fullName varchar NOT NULL UNIQUE,
                        yearOfBirth int
)

create table Book (
                      id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
                      name varchar NOT NULL,
                      author varchar NOT NULL,
                      year int NOT NULL,
                      person_id int REFERENCES Person(id) ON DELETE SET NULL
)